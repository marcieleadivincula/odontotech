@using Domain;
@using BusinessLogicalLayer;
@{
    ViewData["Title"] = "SignUp";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <title>Cadastro</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="images/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="fonts/iconic/css/material-design-iconic-font.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="vendor/animsition/css/animsition.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="vendor/daterangepicker/daterangepicker.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="./css/main.css">
    <link rel="stylesheet" type="text/css" href="./css/util.css">
    <!--===============================================================================================-->
</head>
<body>


    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <form class="login100-form validate-form" action="/Home/SignUp" method="post">
                    <span class="login100-form-title p-b-26">
                        Cadastro
                    </span>


                    <br />
                    @* email *@
                    <div class="wrap-input100 validate-input" data-validate="Formato invalido">
                        <input class="input100" type="text" name="email">
                        <span class="focus-input100" data-placeholder="Email"></span>
                    </div>


                    @{
                        ColaboradorBLL colaboradorBLL = new ColaboradorBLL();
                        List<Colaborador> listacolab = colaboradorBLL.GetAll();
                    }







                    @* pass *@
                    <div class="wrap-input100 validate-input" data-validate="Insira sua senha">
                        <span class="btn-show-pass">
                            <i class="zmdi zmdi-eye"></i>
                        </span>
                        <input class="input100" type="password" name="pass">
                        <span class="focus-input100" data-placeholder="Senha"></span>
                    </div>





                    @* passAgain *@
                    <div class="wrap-input100 validate-input" data-validate="Confirme sua senha">
                        <span class="btn-show-pass">
                            <i class="zmdi zmdi-eye"></i>
                        </span>
                        <input class="input100" type="password" name="passAgain">
                        <span class="focus-input100" data-placeholder="Confirmar Senha"></span>
                    </div>

                    @*<label style="font-size:13px">Colaborador</label>*@
                    <select class="select-css" name="Colaborador">
                        <option value=" ">Selecione o Colaborador</option>
                        @for (int i = 0; i < listacolab.Count; i++)
                        {

                            <option value="@listacolab[i].Id">@listacolab[i].Nome</option>
                        }
                    </select>
                    <input type="hidden" name="Colaborador" value="@ViewBag.Colaborador" />
                    <br />


                    @{
                        if (Convert.ToString(ViewData["result"]) != "")
                        {
                            if (Convert.ToString(ViewData["result"]).Contains("!"))
                            {
                                <label style="color:green;font-size:13px"> @ViewData["result"] </label>
                            }
                            else
                            {

                                <label style="color:red;font-size:13px"> @ViewData["result"] </label>
                            }

                        }

                    }

                    @{ if (Convert.ToBoolean(ViewData["SEA"]))
                        {
                            <label style="color:red;font-size:13px">As senhas não são iguais.</label>
                        }
                    }


                    <div class="container-login100-form-btn">
                        <div class="wrap-login100-form-btn">
                            <div class="login100-form-bgbtn"></div>
                            <button class="login100-form-btn" name="btn" value="1" type="submit">
                                Cadastrar
                            </button>
                        </div>
                    </div>

                    <div class="text-center p-t-115">
                        <span class="txt1">
                            Já tem uma conta?
                        </span>

                        <a class="txt2" href="/Home/Index">
                            Login
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>


    <div id="dropDownSelect1"></div>

    <!--===============================================================================================-->
    <script src="~/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/vendor/animsition/js/animsition.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/vendor/bootstrap/js/popper.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/vendor/daterangepicker/moment.min.js"></script>
    <script src="~/vendor/daterangepicker/daterangepicker.js"></script>
    <!--===============================================================================================-->
    <script src="~/vendor/countdowntime/countdowntime.js"></script>
    <!--===============================================================================================-->
    <script src="./js/main.js"></script>

</body>
</html>